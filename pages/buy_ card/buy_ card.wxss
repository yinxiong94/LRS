.icon {
  height: 20rpx;
  background: rgba(245, 245, 245, 1);
}

.title {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx 15rpx 0 15rpx;
}

.card {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.title_text {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.room_card {
  width: 220rpx;
  height: 300rpx;
  box-shadow: 0px 3px 10px 0px rgba(163, 160, 251, 0.3);
  border-radius: 10rpx;
  margin-top: 30rpx;
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.room_card image {
  width: 110rpx;
  height: 108rpx;
  /* margin-top: 70rpx; */
}

.room_card::before {
  position: absolute;
  bottom: 0;
  content: "￥20.00";
  width: 100%;
  height: 70rpx;
  border-radius: 0px 0px 10px 10px;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 68rpx;
  text-align: center;
}

/* 选中后的样式 */

.room_card1 {
  background: rgba(255, 220, 23, 1);
}

.room_card1::before {
  background-color: rgba(255, 164, 46, 1);
}

/* 未选中的样式 */

.room_card2 {
  background: rgba(238, 238, 238, 1);
}

.room_card2::before {
  background-color: rgba(215, 215, 215, 1);
}

.room_card_text {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.room_card_img1 image {
  width: 140rpx;
  height: 127rpx;
}

.room_card_img2 image {
  width: 172rpx;
  height: 128rpx;
}

.pay {
  width: 600rpx;
  height: 80rpx;
  background: rgba(254, 213, 23, 1);
  border-radius: 10rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  text-align: center;
  line-height: 80rpx;
  position: fixed;
  left:83rpx;
  bottom:150rpx;
  }
