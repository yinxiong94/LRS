.card {
  height: 800rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
}

.card image {
  width: 554rpx;
  height: 545rpx;
}

.card_text {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.card_but {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.card_but1, .card_but2 {
  width: 600rpx;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 80rpx;
  text-align: center;
}

.card_but1 {
  background: rgba(254, 213, 23, 1);
}

.card_but2 {
  border: 1px solid rgba(255, 164, 46, 1);
}
