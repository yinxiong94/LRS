.container {
  /* padding: 30rpx; */
}

.search {
  height: 80rpx;
  background: rgba(238, 238, 238, 1);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 30rpx 0 30rpx;
}

.icon_glass {
  width: 0;
  height: 0;
  border: 2px solid rgba(153, 153, 153, 1);
  border-radius: 50%;
  padding: 20rpx;
  position: relative;
  margin-right: 20rpx;
}

.icon_glass::after {
  content: '';
  height: 15rpx;
  width: 0;
  border-left: 5rpx solid rgba(153, 153, 153, 1);
  position: absolute;
  bottom: 0rpx;
  left: 47rpx;
  z-index: 100;
  transform: rotate(-55deg);
}

.friend_title {
  margin-top: 30rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-left: 30rpx;
}

.recommend_list {
  margin-top: 30rpx;
}

.scrollstyle {
  white-space: nowrap;
}

.scrollstyle_text {
  display: inline-block;
}

.scrollstyle_head {
  width: 150rpx;
  height: 150rpx;
  /* border: 1px solid red; */
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
}

.scrollstyle_head image {
  width: 114rpx;
  height: 115rpx;
  border-radius: 50%;
}

.recommend_all {
  margin: 30rpx 0 30rpx 30rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.recommend_all_list {
  margin: 0rpx 30rpx 0 30rpx;
  border-top: 1px solid rgba(238, 238, 238, 1);
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.recommend_all_list image {
  width: 100rpx;
  height: 100rpx;
}

.all_text {
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: space-between;
  height: 90rpx;
}

.name {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.integral {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.recommend_all_img {
  display: flex;
}

.attention {
  width: 140rpx;
  height: 60rpx;
  background: rgba(254, 213, 23, 1);
  border-radius: 30rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  text-align: center;
  line-height: 60rpx;
}

.attention image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
