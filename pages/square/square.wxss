.container {
  padding: 30rpx;
}

.select_title {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  width: 400rpx;
  display: flex;
  justify-content: space-between;
}

.select_title view {
  height: 60rpx;
}

.select_title_click {
  border-bottom: 6rpx solid rgba(254, 213, 23, 1);
  border-radius: 5rpx;
  color: rgba(51, 51, 51, 1);
  font-weight: bold;
}

.select_but {
  margin-top: 30rpx;
  width: 320rpx;
  display: flex;
  justify-content: space-between;
}

.select_but view {
  width: 140rpx;
  height: 46rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 10rpx;
  color: rgba(131, 131, 131, 1);
  font-size: 22rpx;
  text-align: center;
  line-height: 46rpx;
}

.select_but1 {
  color: #fff !important;
  background-color: rgba(255, 164, 46, 1) !important;
}

.comment {
  margin-top: 40rpx;
}

.comment_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.comment_title_img {
  display: flex;
}

.comment_title_text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.comment_title_text1 {
  display: flex;
  align-items: center;
  height: 40%;
  width: 300rpx;
  justify-content: space-between;
}

.comment_title_dengji {
  display: flex;
  height: 40%;
  align-items: center;
  width: 230rpx;
  justify-content: space-between;
}

.comment_title_img>image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.comment_title_text1 image {
  width: 22rpx;
  height: 22rpx;
}

.name {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.dengji {
  width: 60rpx;
  height: 28rpx;
  background: rgba(254, 213, 23, 1);
  border-radius: 6rpx;
  color: rgba(51, 51, 51, 1);
  font-size: 22rpx;
  text-align: center;
  line-height: 28rpx;
}

.time {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
}

.label {
  width: 100rpx;
  height: 28rpx;
  background: rgba(254, 213, 23, 1);
  border-radius: 6rpx;
  color: rgba(51, 51, 51, 1);
  font-size: 20rpx;
  text-align: center;
  line-height: 28rpx;
}

.shopname {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.comment_title_but {
  width: 135rpx;
  height: 60rpx;
  background: rgba(254, 213, 23, 1);
  border-radius: 30rpx;
  color: rgba(51, 51, 51, 1);
  font-size: 26rpx;
  line-height: 60rpx;
  text-align: center;
}

.comment_title_but image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}

.Review_words {
  margin-top: 26rpx;
  margin-bottom: 29rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.Review_img{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.Review_img image{
    width: 227rpx;
    height: 227rpx;
    margin-top: 5rpx;
}
