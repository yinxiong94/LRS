.container {
  padding: 30rpx;
}

.select_title {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  width: 400rpx;
  display: flex;
  justify-content: space-between;
}

.select_title view {
  height: 60rpx;
}

.select_title_click {
  border-bottom: 6rpx solid rgba(254, 213, 23, 1);
  border-radius: 5rpx;
  color: rgba(51, 51, 51, 1);
  font-weight: bold;
}

.select_but {
  margin-top: 30rpx;
  width: 320rpx;
  display: flex;
  justify-content: space-between;
}

.select_but view {
  width: 140rpx;
  height: 46rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 10rpx;
  color: rgba(131, 131, 131, 1);
  font-size: 22rpx;
  text-align: center;
  line-height: 46rpx;
}

.select_but1 {
  color: #fff !important;
  background-color: rgba(255, 164, 46, 1) !important;
}

.comment {
  margin-top: 40rpx;
}

.comment_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.comment_title_img {
  display: flex;
}

.comment_title_text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.comment_title_text1 {
  display: flex;
  align-items: center;
  height: 40%;
  width: 300rpx;
  justify-content: space-between;
}

.comment_title_dengji {
  display: flex;
  height: 40%;
  align-items: center;
  width: 230rpx;
  justify-content: space-between;
}

.comment_title_img>image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.comment_title_text1 image {
  width: 22rpx;
  height: 22rpx;
}

.name {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.dengji {
  width: 60rpx;
  height: 28rpx;
  background: rgba(254, 213, 23, 1);
  border-radius: 6rpx;
  color: rgba(51, 51, 51, 1);
  font-size: 22rpx;
  text-align: center;
  line-height: 28rpx;
}

.time {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
}

.label {
  width: 100rpx;
  height: 28rpx;
  background: rgba(254, 213, 23, 1);
  border-radius: 6rpx;
  color: rgba(51, 51, 51, 1);
  font-size: 20rpx;
  text-align: center;
  line-height: 28rpx;
}

.shopname {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.comment_title_but {
  width: 135rpx;
  height: 60rpx;
  background: rgba(254, 213, 23, 1);
  border-radius: 30rpx;
  color: rgba(51, 51, 51, 1);
  font-size: 26rpx;
  line-height: 60rpx;
  text-align: center;
}

.comment_title_but image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}

.Review_words {
  margin-top: 26rpx;
  margin-bottom: 29rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.Review_img {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.Review_img image {
  width: 227rpx;
  height: 227rpx;
  margin-top: 5rpx;
}

.Review_list {
  width: 55%;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.Review_data, .Review_data1, .Review_data2 {
  width: 27%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.Review_data image {
  width: 40rpx;
  height: 36rpx;
}

.Review_data1 image {
  width: 38rpx;
  height: 38rpx;
}

.Review_data2 image {
  width: 38rpx;
  height: 38rpx;
}

.comment_content {
  margin-top: 20rpx;
}

.comment_content_list {
  margin: 10rpx 0;
}

.comment_content_list1 {
  margin: 10rpx 0;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 30rpx;
}

.comment_content_list text:nth-child(1) {
  color: rgba(50, 139, 250, 1);
}

.comment_content_list text:nth-child(3) {
  color: rgba(50, 139, 250, 1);
}

.division {
  height: 20rpx;
  background: rgba(245, 245, 245, 1);
}

.Review_img1 {
  margin: 30rpx 0;
  height: 160rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 6rpx;
  display: flex;
}

.Review_img1 image {
  width: 200rpx;
  height: 100%;
  margin-right: 30rpx;
}

.Review_img1_text {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.Review_img1_text view:nth-child(1) {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.Review_img1_text view:nth-child(2) {
  font-size: 26rpx;
  color: rgba(51, 51, 51, 1);
}

.fabu{
  position: fixed;
  bottom: 80rpx;
  left: 40%;
}

.fabu image{
    width: 126rpx;
    height: 126rpx;

}