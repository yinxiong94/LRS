page {
  background: #f5f5f5;
}

.shadow {
  box-shadow: 0px 3rpx 7rpx 0px rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 1rpx;
}

.name {
  display: flex;
  line-height: 100rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-top: 40rpx;
}

.name image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.name view {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-left: 20rpx;
}

.club {
  background: #fff;
  margin-top: 40rpx;
  padding-top: 60rpx;
  box-sizing: border-box;
  padding-bottom: 50rpx;
}

.club-name {
  width: 100%;
  text-align: center;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.estimate {
  display: flex;
  text-align: center;
  justify-content: space-around;
  margin-top: 50rpx;
}

.estimate-1 image {
  width: 76rpx;
  height: 76rpx;
}

.estimate-1 view {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.btn {
  width: 690rpx;
  height: 80rpx;
  background: rgba(255, 164, 46, 1);
  border-radius: 10rpx;
  margin: auto;
  line-height: 80rpx;
  color:#fff;
  margin-top: 200rpx
}
