.uploading_img {
  margin-left: 20rpx;
  display: flex;
}

.uploading {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}

.uploading image:nth-child(1) {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: -8rpx;
  top: -8rpx;
}

.uploading image:nth-child(2) {
  width: 180rpx;
  height: 180rpx;
}

.uploading1 image {
  width: 180rpx;
  height: 180rpx;
}

.icon {
  border-top: 1px solid rgba(238, 238, 238, 1);
